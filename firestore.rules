rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // مستندات الشركة
    match /companies/{companyId} {
      allow read: if request.auth != null && 
        (request.auth.token.companyId == companyId || request.auth.token.role == 'admin');
      allow write: if request.auth != null && request.auth.token.role == 'admin';
      
      // المستخدمين داخل الشركة
      match /users/{userId} {
        allow read: if request.auth != null && 
          request.auth.token.companyId == companyId;
        allow create: if request.auth != null && 
          request.auth.token.companyId == companyId && 
          request.auth.token.role in ['admin', 'cashier'];
        allow update, delete: if request.auth != null && 
          request.auth.token.companyId == companyId && 
          request.auth.token.role == 'admin';
      }
      
      // المنتجات
      match /products/{productId} {
        allow read: if request.auth != null && 
          request.auth.token.companyId == companyId;
        allow write: if request.auth != null && 
          request.auth.token.companyId == companyId && 
          request.auth.token.role in ['admin', 'cashier'];
      }
      
      // الطلبات
      match /orders/{orderId} {
        allow read: if request.auth != null && 
          request.auth.token.companyId == companyId;
        allow create: if request.auth != null && 
          request.auth.token.companyId == companyId;
        allow update: if request.auth != null && 
          request.auth.token.companyId == companyId && 
          (request.auth.token.role == 'admin' || 
           (request.auth.token.role == 'sales_rep' && 
            resource.data.salesRepId == request.auth.uid));
      }
      
      // الفواتير
      match /invoices/{invoiceId} {
        allow read: if request.auth != null && 
          request.auth.token.companyId == companyId;
        allow create: if request.auth != null && 
          request.auth.token.companyId == companyId && 
          request.auth.token.role in ['admin', 'cashier'];
        allow update: if request.auth != null && 
          request.auth.token.companyId == companyId && 
          request.auth.token.role == 'admin';
      }
      
      // الخزينة
      match /treasury/{treasuryId} {
        allow read: if request.auth != null && 
          request.auth.token.companyId == companyId && 
          request.auth.token.role in ['admin', 'cashier'];
        allow write: if request.auth != null && 
          request.auth.token.companyId == companyId && 
          request.auth.token.role == 'admin';
      }
      
      // الحركات المالية
      match /transactions/{transactionId} {
        allow read: if request.auth != null && 
          request.auth.token.companyId == companyId && 
          request.auth.token.role in ['admin', 'cashier'];
        allow create: if request.auth != null && 
          request.auth.token.companyId == companyId;
      }
      
      // العدادات الذرية
      match /counters/{counterId} {
        allow read: if request.auth != null && 
          request.auth.token.companyId == companyId;
        allow write: if request.auth != null && 
          request.auth.token.companyId == companyId;
      }
    }
    
    // تحقق من أن المستخدم يملك الشركة
    function userHasCompanyAccess(companyId) {
      return request.auth != null && 
        request.auth.token.companyId == companyId;
    }
  }
}
